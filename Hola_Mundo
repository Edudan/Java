
package hola_mundo;

import java.util.Scanner;
import javax.swing.JOptionPane;

public class Hola_Mundo {

    public static void main(String[] args) {
        
        //Hola_Mundo scan= new Hola_Mundo(); scan.Scanner();
       Hola_Mundo sms= new Hola_Mundo(); sms.Joption();
    }
    
    public void Scanner(){
        
        System.out.println("**SCANNER**");
        Scanner scan = new Scanner(System.in);
        String name;
        
        System.out.print("What's your name: ");
        name = scan.nextLine();
        System.out.println("Hello: "+name);
        
    }
    
    public void Joption(){
        
        System.out.println("****joption pane****");
        String name = null;
        JOptionPane.showMessageDialog(null,"What's your name?  ");
        String name2= JOptionPane.showInputDialog(name);
        JOptionPane.showMessageDialog(null,"Hello "+name2+"!!");
        
    }
}
